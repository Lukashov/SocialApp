<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgPictureUser_FF"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnLog_FF"
            android:layout_toStartOf="@+id/btnLog_FF"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_above="@+id/btnLog_FF"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnLog_FF"
            android:layout_alignStart="@+id/btnLog_FF">

            <TextView
                android:id="@+id/tvIdUser_FF"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvNameUser_FF"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvEmailUser_FF"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12sp"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLog_FF"
            android:layout_alignBottom="@+id/imgPictureUser_FF"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnShare_FF"
            android:visibility="invisible"
            android:text="Share"
            android:textSize="12sp"
            android:layout_below="@+id/linearLayout2"
            android:layout_toRightOf="@+id/btnLog_FF"
            android:layout_toEndOf="@+id/btnLog_FF"/>

</RelativeLayout>